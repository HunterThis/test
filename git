//------------------------------configuration------

git config user.name ""
git config user.email 
git config core.editor
// if contain --global ,it's configuration for global

git config --list

//------------------------------download-------

git clone [url]

//------------------------------configurationDirectory-----

git init

//------------------------------masterFile----------

git status

git add     git commit (detail look picture)
--viewPicture:    
    file_status_lifecycle.png

git checkout <file>:     
    discard change in word directory 

.gitignore:     
    add ignore file

commit: 
    commit file to storage ,then using "push" push file to repertory

commit -a: 
    commit all file without "add" 

//------------------------------pushFile---------

git push origin master:     
    push file to repertory

//------------------------------branch--------

git branch:
    built a new branch
